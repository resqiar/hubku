---
const { active } = Astro.props
---

<nav class="bg-white border-gray-200 dark:bg-gray-900 mt-4">
	<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
		<a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
			<img src="/media/hubku-logo.png" height="40" width="120" alt="Hubku Logo" />
		</a>

		<div class="flex items-center gap-8 mt-4 md:mt-0">
			<div class="flex items-center gap-2">
				<a href="/blog" class="m-0 mx-2 rounded p-0">
					<p class={`px-2 py-2 hover:underline hover:font-bold ${active === "blog" ? "underline font-bold" : ""}`}>Blog</p>
				</a>

				<a href="/sales" class="m-0 mx-2 rounded p-0">
					<p class="highlight-container px-2 py-2 hover:font-bold">
						<span class="highlight">
							Code for Sale
						</span>
					</p>
				</a>
			</div>
		</div>
	</div>
</nav>

<style>
.highlight-container, .highlight {
	position: relative;
}

.highlight-container {
	display: inline-block;
}
.highlight-container:before {
	content: " ";
	display: block;
	height: 90%;
	width: 100%;
	margin-left: -3px;
	margin-right: -3px;
	position: absolute;
	background: #ff9000;
	transform: rotate(2deg);
	top: -1px;
	left: -1px;
	border-radius: 20% 25% 20% 24%;
	padding: 10px 3px 3px 10px;
}
</style>
